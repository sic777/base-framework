<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.application}" owner="sic777" organization="sic777"
                       environment="${dubbo.environment}"/>

    <!-- 注册中心地址 -->
    <dubbo:registry protocol="zookeeper" address="${dubbo.registries}" client="zkclient"/>

    <!-- 定义暴露服务的协议和端口 -->
    <dubbo:protocol name="${dubbo.protocol}" port="${dubbo.port}"/>

    <!-- dubbo 扫描 -->
    <dubbo:annotation package="com.sic777"/>

</beans>